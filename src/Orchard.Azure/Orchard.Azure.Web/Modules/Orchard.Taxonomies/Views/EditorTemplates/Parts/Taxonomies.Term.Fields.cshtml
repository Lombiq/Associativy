@model Orchard.Taxonomies.Models.TermPart

@Html.ValidationSummary()
<fieldset>
    @Html.CheckBoxFor(m => m.Selectable, new { @class = "" }) <label class="forcheckbox" for="@Html.FieldIdFor(m => m.Selectable)">@T("Selectable")</label>
    @Html.Hint(T("Uncheck if users should not be able to select this term"))
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Weight)
    @Html.TextBoxFor(m => m.Weight, new { @class = "text-small" }) 
    @Html.Hint(T("If specified, will be used to sort terms at the same level"))
</fieldset>