@using Orchard.Utility.Extensions

@{ Layout.Title = T("Migrate Taxonomies").ToString(); }

@using (Html.BeginFormAntiForgeryPost()) {
    Html.ValidationSummary();
    <fieldset>
        <legend>@T("Migrating Taxonomies:")</legend>
        @Html.Hint(T("This migration step will convert the Contrib.Taxonomies content items to Orchard.Taxonomies."))
        @Html.Hint(T("If you had any Term Widget instance, you will have to replace them with Projection Queries."))
    </fieldset>
    <fieldset>
        @if (ViewBag.CanMigrate) {
            <button type="submit">@T("Migrate")</button>
        }
    </fieldset>
}